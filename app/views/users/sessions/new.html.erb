<section>
  <div class="flex items-center justify-center px-4 py-10 sm:px-6 sm:py-16 lg:px-8 lg:py-24">
    <div class="xl:mx-auto xl:w-full xl:max-w-sm 2xl:max-w-md">
      <h2 class="text-center text-2xl font-bold leading-tight text-black">
        Sign in to your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600 ">
        Don&#x27;t have an account?
        <span
          class="font-semibold text-black transition-all duration-200 hover:underline"
        >
          <%= link_to "Sign up", new_registration_path(resource_name) %>
        </span>
      </p>
      <%= form_for(resource, as: resource_name, class: "mt-8", url: session_path(resource_name)) do |f| %>
        <div class="space-y-5">
          <div class="mt-2">
            <%= f.label :email, class: "text-base font-medium text-gray-900"%>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-50"%>
          </div>
        </div>
        <div class="mt-2 flex items-center justify-between">
          <%= f.label :password, class: "text-base font-medium text-gray-900"%>
          <span class="text-sm font-semibold text-black hover:underline" >
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          </span>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "current-password", class: "flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-50" %>
        </div>
        <%= f.submit "Log in", class: "mt-2 inline-flex w-full items-center justify-center rounded-md bg-black px-3.5 py-2.5 font-semibold leading-7 text-white hover:bg-black/80"%>
      </div>
    </div>
  <% end %>
</div>
</div>
</section>
